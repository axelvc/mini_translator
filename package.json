{
  "name": "mini_translator",
  "type": "module",
  "visualName": "Mini Translator",
  "description": "Translate a text to a different language",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently 'pnpm run dev:web' 'pnpm run dev:main'",
    "dev:web": "vite",
    "dev:main": "tsx main.ts",
    "build": "pnpm run build:web && pnpm run build:main",
    "build:web": "NODE_ENV=production vue-tsc --noEmit && vite build",
    "build:main": "NODE_ENV=production tsx main.ts",
    "lint": "lint-staged"
  },
  "pre-commit": "lint",
  "lint-staged": {
    "*.{ts,js,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vueuse/core": "^13.5.0",
    "vue": "^3.5.17",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.10",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vue": "^10.3.0",
    "fs-extra": "^11.3.0",
    "globby": "^14.1.0",
    "lint-staged": "^16.1.2",
    "ora": "^8.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2",
    "vite-svg-loader": "^5.1.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.1"
  }
}
